html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
        link(rel="stylesheet", href="/styles/index.css")
        script(src="/scripts/jquery.js")
        script(src="/socket.io/socket.io.js")
        script(src="/scripts/main.js")
    body

        h1 Login

        if errors
            each error in errors
                .alert.alert-danger=error

        form(action="/auth/login",method="POST")
            .form-group
                label(for="email") Email
                input#email(type="text", name="email",class="form-control", value=values?values.email:"")
            .form-group
                label(for="password") Password
                input#password(type="password", name="password",class="form-control", value=values?values.password:"")

            button#btnLogin(class="btn btn-primary") Login     
