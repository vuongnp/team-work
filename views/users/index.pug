html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Users
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
        link(rel="stylesheet", href="/styles/index.css")
        script(src="/scripts/jquery.js")
        script(src="/socket.io/socket.io.js")
        script(src="/scripts/main.js")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='#') Team
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/') Home 
                    li.nav-item
                        a.nav-link(href='/users') Users
            if user
                p= user.name
            a(href='/auth/logout') Logout
        #wrapper
            #chatForm
                #left
                    //#boxTitle Users Online
                    //#boxContent
                    form(action='/rooms/create',method="POST")
                        .form-group
                            label(for="name") Room Name
                            input#name(type="text", name="name",class="form-control", value=values?values.name:"")
                        .form-group
                            label(for="code") Code
                            input#code(type="text", name="code",class="form-control", value=values?values.code:"")

                        button#btnNewRoom(class="btn btn-primary") New Room      
                    input#codeRoom(type='text',name='codeRoom' placeholder="Enter code")
                    input#btnJoinRoom(type='button', value='Join Room')
                    h2 Room online:
                        #dsRoom
                            each room in rooms
                                a(href="/rooms/"+room.id)=room.name
                                br
                #right
                    h4#roomHienTai
                    //#sayHi
                    //| Hello 
                    //span#currentUser Teo
                    //input#btnLogout(type='button', value='Logout')
                    #listMessages
                        //if messages
                            each mess in messages
                                each user in mess.userIds
                                    span.mr-3=user.name
                                    span= mess.message
                                    br

                    #thongbao
                    input#txtMessage(type='text', name='')
                    input#btnSendMessage(type='button', name='', value='Send')





















