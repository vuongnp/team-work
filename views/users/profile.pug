extends ../layouts/common

block content

    h1 Profile User


        if errors
            each error in errors
                .alert.alert-danger=error

        form(action="/users/"+user.id, method="POST")
            .form-group
                label(for="name") Name
                input#name(type="text", name="name",class="form-control", value=user?user.name:"")
            .form-group
                label(for="phone") Phone
                input#phone(type="text", name="phone",class="form-control", value=user?user.phone:"")
            .form-group
                label(for="email") Email
                input#email(type="text", name="email",class="form-control", value=user?user.email:"")
            button(class="btn btn-primary") Edit   
            //a(href="/users/"+user.id) Edit